                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReturnPlace, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ReturnPlace, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReturnPlace, "", new { @class = "text-danger" })
                </div>
