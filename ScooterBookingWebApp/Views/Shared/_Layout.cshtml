<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        #green {
            color: #00FF00;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <a id="green" class="navbar-brand" href="/">GoGreen</a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <div class="navbar-collapse collapse">
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Administrator"))
                        {
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a href="/Scooter/Index" class="nav-link">Scooters Table</a></li>
                        <li class="nav-item"><a href="/Scooter/New" class="nav-link">Add Scooter</a></li>
                        <li class="nav-item"><a href="/Scooter/BookedListAdmin" class="nav-link">Booked Scooters</a></li>
                        <li class="nav-item"><a href="/Customer/Index" class="nav-link">Customers Table</a></li>
                        <li class="nav-item"><a href="/Customer/New" class="nav-link">Add Customer</a></li>
                    </ul>
                        }
                        else if (User.IsInRole("Customer"))
                        {
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a href="/Home/Index" class="nav-link">Home</a></li>
                        <li class="nav-item"><a href="/Scooter/ScooterTable" class="nav-link">Scooters Offer Table</a></li>
                        <li class="nav-item"><a href="/Scooter/BookedList" class="nav-link">Booked Scooters</a></li>
                        <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                        <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>

                    </ul>
                        }
                    }
                    else
                    {
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a href="/Home/Index" class="nav-link">Home</a></li>
                        <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                        <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>
                    </ul>
                    }
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
            </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application for Scooter Booking (Dejan Kuzmanoski)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
